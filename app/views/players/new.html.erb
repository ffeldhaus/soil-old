<div class="content">
  <div class="row">
    <div class="login-form offset2 span6">
      <%= form_for @player, :class => 'form-horizontal' do |f| %>
          <fieldset>
            <% if @player.errors.any? %>
                <div class="error_messages">
                  <h2>Form is invalid</h2>
                  <ul>
                    <% for message in @player.errors.full_messages %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div id="legend">
              <legend class="">Registrieren</legend>
            </div>
            <div class="control-player">
              <%= f.label :name, :class => 'control-label' %>
              <%= f.text_field :name, :class => 'input-large' %>
            </div>

            <div class="control-player">
              <%= f.label :password, :class => 'control-label' %>
              <%= f.password_field :password, :class => 'input-large' %>
            </div>

            <div class="control-player">
              <%= label_tag :password_confirmation, nil, :class => 'control-label' %>
              <%= f.password_field :password_confirmation, :class => 'input-large' %>
            </div>

            <div class="control-player">
              <!-- Button -->
              <div class="controls">
                <div class="actions"><%= submit_tag "Registrieren", :class => 'btn btn-large btn-primary' %></div>
              </div>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>