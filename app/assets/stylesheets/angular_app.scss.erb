body {
    background-image: url(<%= asset_path('bauernhof.jpg')%>);
    background-size: 100% auto;
    background-attachment: fixed;
    background-position: bottom;
    background-repeat: no-repeat;
}

red {
    color: #F00;
}

html {
    overflow: hidden;
    height: 100%;
}

body {
    height: 100%;
    overflow: auto;
}

* {
    -webkit-overflow-scrolling: touch;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: -moz-none;
    -o-user-select: none;
    user-select: none;
}

input {
    -webkit-user-select: text;
    -khtml-user-select: text;
    -moz-user-select: text;
    -o-user-select: text;
    user-select: text;
}

li {
    cursor: pointer;
}

.accordion-body {
    cursor: default;
}

.accordion-heading {
    cursor: pointer;
}

.accordion-heading .accordion-toggle {
    padding: 4px 15px;
}

.form-horizontal .control-group {
    margin-bottom: 10px;
}

tr {
    text-align: left;
}

.container {
    position: relative;
}

.pagination {
    margin: 0 0 5px 0;
}

.pagination ul {
    background-color: rgba(30, 30, 30, 0.5);
    font-size: 120%;
}

.pagination a {
    color: #CCC;
}

.pagination a:hover {
    background-color: rgba(0, 0, 0, 0.4);
}


.pagination ul a {
    background-color: rgba(0, 0, 0, 0.4);
    color: rgb(221, 221, 221);
}

.pagination ul .active a {
    background-color: rgba(50, 50, 150, 0.6);
    color: rgb(221, 221, 221);
}

.pagination ul li a {
    background-color: rgba(0, 0, 0, 0.4);
}

.pagination ul li a:hover {
    background-color: rgba(100, 100, 100, 0.4);
}

legend {
    margin-right: -50px;
    font-weight: bold;
    color: #404040;
}

.field, .soil, .nutrition, .cropsequence, .harvest {
    position: absolute;
    width: 100%;
}

.soil, .nutrition, .cropsequence, .harvest {
    opacity: 0.6;
    z-index: 10;
}

.soil li, .nutrition li, .cropsequence li, .harvest li {
    line-height: 6em;
}

.ui-selectable .ui-selectee {
    background-image: url(../img/Brachland.jpg);
    background-size: 100% auto;
    color: white;
}

.ui-selectable .ui-selecting {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border: 1px solid red;
    background-size: 100% auto;
}

.ui-selectable .ui-selected {
    background-size: 100% auto;
    color: white;
}

.ui-selectable {
    display: inline-block;
    list-style-type: none;
    margin: 0px;
    padding: 0px;
    width: 100%;
    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

.ui-selectable li {
    background-size: 100% auto;
    background-repeat: no-repeat;
    color: white;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border: 1px solid black;
    padding: 0px;
    float: left;
    width: 12.5%;
    height: 0;
    padding-bottom: 12%;
    font-size: 1em;
    text-align: center;
}

.plantation li {
    width: 20%;
    padding-bottom: 19%;
}

.ui-show {
    color: blue;
}

.ui-hide {
    opacity: 0;
}

.endRound {
    width: 100%;
    position: absolute;
    background-color: rgba(255, 255, 255, 0.7);
    padding: 1%;
}

.endRound button {
    width: 50%;
}

.endRound table {
    opacity: 1;
    border-spacing: 10px;
}

.endRound table th {
    text-align: right;
}

.endRound table td {
    width: 100%;
}

.endRound select {
    margin: 0;
    width: 100%;
}

.finance {
    min-width: 50%;
    display: table;
    margin: 0 auto;
    margin-bottom: 10px;
}

.finance table {
    width: 98%;
}

.finance td {
    width: 100px;
    text-align: right;
}

.accordion {
    margin-bottom: 0px;
}

.accordion-group {
    overflow: hidden;
}

.accordion-heading {
    background-color: rgba(255, 255, 255, 0.8);
    font-weight: bold;
}

.accordion-body {
    background-color: rgba(255, 255, 255, 0.6);
}

.accordion-heading a:hover {
    background-color: rgba(255, 255, 255, 1);
    color: #777;
}

.accordion-inner, .finance .accordion-heading .accordion-toggle {
    padding-right: 0;
}

.navbar .brand {
